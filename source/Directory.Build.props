<?xml version="1.0" encoding="utf-8"?>
<Project>
    <!--
        Source project configuration that inherits from the root Directory.Build.props.
        Defines settings specific to library projects that will be packaged and distributed.
    -->
    <PropertyGroup>
        <ProjectCategory>source</ProjectCategory>
        <TargetFrameworks>net8.0</TargetFrameworks>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <!--
        NuGet package metadata applied to all source projects.
        Provides consistent branding and repository information across all packages.
    -->
    <PropertyGroup>
        <Copyright>Copyright Â© 2024 Christopher Whitley</Copyright>
        <Authors>Christopher Whitley and contributors</Authors>
        <Company>Aristurtle</Company>
        <PackageProjectUrl>https://github.com/AristurtleDev/AsepriteDotNet</PackageProjectUrl>
        <PackageIcon>nuget-icon.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>Aseprite;reader;pixel art;png;spritesheet;tilesheet</PackageTags>
        <RepositoryType>git</RepositoryType>
        <RepositoryBranch>main</RepositoryBranch>
        <RepositoryUrl>https://github.com/AristurtleDev/AsepriteDotNet</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
    </PropertyGroup>

    <!--
        Shared package references for source link and debugging support.
        Enables better debugging experience for package consumers.
    -->
    <ItemGroup>
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="all" />
        <PackageReference Include="System.Drawing.Primitives" Version="4.3.0" />
    </ItemGroup>

    <!--
        Common files included in all NuGet packages.
        Provides consistent branding and documentation across packages.
    -->
    <ItemGroup>
        <None Include="$(SolutionDirectory).images\nuget-icon.png" Pack="true" PackagePath="" />
        <None Include="$(SolutionDirectory)README.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <!-- Import the parent Directory.Build.props -->
    <Import Project="$(MSBuildThisFileDirectory)..\Directory.Build.props" />
</Project>
